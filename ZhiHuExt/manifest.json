{
  "manifest_version": 2,
  "name": "知乎疯牛病",
  "key": "",
  "version": "1.0.10",
  "author": "XZiar",
  "description": "知乎疯牛病插件————专治广告（并不能）",
  "icons":
  {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "minimum_chrome_version": "58",
  "browser_action":
  {
    "default_icon": "icon.png",
    "default_title": "知乎疯牛病插件",
    "default_popup": "popup.html"
  },
  "permissions":
  [
    "*://www.zhihu.com/",
    "*://zhuanlan.zhihu.com/",
    "*://api.zhihu.com/",
    "*://127.0.0.1:*/",
    "tabs",
    "storage",
    "unlimitedStorage",
    "downloads",
    "webRequest",
    "notifications"
  ],
  "externally_connectable":
  {
    "matches":
    [
      "*://www.zhihu.com/*",
      "*://zhuanlan.zhihu.com/p/*"
    ]
  },
  "web_accessible_resources": 
  [
    "AutoSpider.html"
  ],
  "background":
  {
    "page": "background.html"
  },
  "content_scripts":
  [
    {
      "matches":
      [
        "*://www.zhihu.com/*",
        "*://zhuanlan.zhihu.com/*"
      ],
      "js":
      [
        "3rd/js/jquery-3.3.1.min.js",
        "pod.js",
        "utils.js",
        "ContentBase.js",
        "PageBase.js",
        "PageEnhance.js",
        "ZhiHuHooker.js"
      ],
      "css":
      [
        "cssfix.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches":
      [
        "*://api.zhihu.com/autospider"
      ],
      "all_frames": true,
      "js":
      [
        "APIPageHooker.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches":
      [
        "*://www.zhihu.com/community/*"
      ],
      "exclude_matches":
      [
        "*://www.zhihu.com/community/reported/*"
      ],
      "js":
      [
        "CommunityRep.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches":
      [
        "*://www.zhihu.com/*",
        "*://zhuanlan.zhihu.com/p/*"
      ],
      "exclude_matches":
      [
      ],
      "js":
      [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
} 